 
@model HomeViewModel

@using BookStore.ViewModels.Catalog.Products;
@inject LazZiya.ExpressLocalization.ISharedCultureLocalizer _loc;
@inject Microsoft.Extensions.Configuration.IConfiguration Configuration;
@{
    var culture = CultureInfo.CurrentCulture.Name;
}

@{
    ViewData["Title"] = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

  <!--================Home Banner Area =================-->
  <section class="home_banner_area mb-40">
    <div class="banner_inner d-flex ">
      <div class="container" style="padding-top:125px;">
        <div class="banner_content row">
          <div class="col-lg-12">
            <p class="sub text-uppercase">Light Novel Collection</p>
            <h3><span>Each</span> Book <br />Each <span>Story</span></h3>
            <h4>Lorem Lorem Lorem Lorem  </h4>
            <a class="main_btn mt-40" href="#">View Collection</a>
          </div>
        </div>
      </div>
    </div>
  </section>
  <!--================End Home Banner Area =================-->

  <!-- Start feature Area -->
  <section class="feature-area ">
    <div class="container">
      <div class="row">
        <div class="col-lg-3 col-md-6">
          <div class="single-feature">
            <a href="#" class="title">
              <i class="flaticon-money"></i>
              <h3>Money back gurantee</h3>
            </a>
            <p>Shall open divide a one</p>
          </div>
        </div>

        <div class="col-lg-3 col-md-6">
          <div class="single-feature">
            <a href="#" class="title">
              <i class="flaticon-truck"></i>
              <h3>Free Delivery</h3>
            </a>
            <p>Shall open divide a one</p>
          </div>
        </div>

        <div class="col-lg-3 col-md-6">
          <div class="single-feature">
            <a href="#" class="title">
              <i class="flaticon-support"></i>
              <h3>Alway support</h3>
            </a>
            <p>Shall open divide a one</p>
          </div>
        </div>

        <div class="col-lg-3 col-md-6">
          <div class="single-feature">
            <a href="#" class="title">
              <i class="flaticon-blockchain"></i>
              <h3>Secure payment</h3>
            </a>
            <p>Shall open divide a one</p>
          </div>
        </div>
      </div>
    </div>
  </section>
  <!-- End feature Area -->

  <!--================ Feature Product Area =================-->
  <section class="feature_product_area ">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-lg-12">
          <div class="main_title">
            <h2><span>Featured product</span></h2>
            <h3>Hottest Products of Our Store</h3>
          </div>
        </div>
      </div>

      <div class="row">
      @foreach (var item in @Model.FeaturedProducts)
     {
         var url = $"/{culture}/{_loc["productUrl"]}/{item.ProductId}";
         
        <div class="col-lg-4 col-md-6">
          <div class="single-product">
            <div class="product-img">
              <a href="@url"><img class="img-fluid w-100" src="@(Configuration["BaseAddress"]+item.ShowDefaultImage)" style="height:496px;" alt="@item.Name" /></a>
              <div class="p_icon">
                <a href="@url">
                  <i class="ti-eye"></i>
                </a>
                <a href="#" class="btn-add-cart" data-id="@item.ProductId">
                  <i class="ti-shopping-cart"></i>
                </a>
              </div>
            </div>
            <div class="product-btm">
              <a href="@url" class="d-block">
                <h4>@item.Name</h4>
              </a>
              <div class="mt-3">
                <span class="mr-4">@item.Price.ToString("C", CultureInfo.CurrentCulture)</span>
                <del>@item.OriginalPrice.ToString("C", CultureInfo.CurrentCulture)</del>
              </div>
            </div>
          </div>
        </div>  
     }
      
           
      </div>
    </div>
  </section>
  <!--================ End Feature Product Area =================-->

  <!--================ New Product Area =================-->
  <section class="new_product_area ">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-lg-12">
          <div class="main_title">
            <h2><span>Hot Collection</span></h2>
            <h3>Mahouka Koukou no Rettousei Series</h3>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-lg-6">
          <div class="new_product" style="padding: 15px 15px;">
            
            <div class="product-img" style="padding: 10px 10px;">
              <a href="/@culture/@_loc["productUrl"]/@Model.CollectionProducts[0].ProductId"><img class="img-fluid" src="@(Configuration["BaseAddress"]+Model.CollectionProducts[0].ShowDefaultImage)" alt="" /></a>
            </div>
            <h3 style="height: 95px; padding-top:25px" class="text-uppercase">@Model.CollectionProducts[0].Name</h3>
            <h4 style=" padding-top:20px">@Model.CollectionProducts[0].Price.ToString("C", CultureInfo.CurrentCulture)</h4>
            <a href="#" style="font-size:25px; width:250px;" class="main_btn btn-add-cart" data-id="@Model.CollectionProducts[0].ProductId">Add to cart</a>
          </div>
        </div>

        <div class="col-lg-6 mt-5 mt-lg-0">
          <div class="row">
            @for (int i =1;i<@Model.CollectionProducts.Count;i++)
            {
                var url = $"/{culture}/{_loc["productUrl"]}/{Model.CollectionProducts[i].ProductId}";
              <div class="col-lg-6 col-md-6">
              <div class="single-product">
                <div class="product-img">
                  <a href="@url" ><img class="img-fluid w-100" src="@(Configuration["BaseAddress"]+Model.CollectionProducts[i].ShowDefaultImage)" style="width:255px;height:360px;" alt="Model.CollectionProducts[i].Name" /></a>
                  <div class="p_icon">
                    <a href="@url">
                      <i class="ti-eye"></i>
                    </a>
                    <a href="#"  class="btn-add-cart" data-id="@Model.CollectionProducts[i].ProductId">
                      <i class="ti-shopping-cart"></i>
                    </a>
                  </div>
                </div>
                <div class="product-btm">
                   <a href="@url" class="d-block">
                    <h4>@Model.CollectionProducts[i].Name</h4>
                  </a>
                  <div class="mt-3">
                    <span class="mr-4">@Model.CollectionProducts[i].Price.ToString("C", CultureInfo.CurrentCulture)</span>
                    <del>@Model.CollectionProducts[i].OriginalPrice.ToString("C", CultureInfo.CurrentCulture)</del>
                  </div>
                </div>
              </div>
            </div>
            }
          </div>
        </div>
      </div>
    </div>
  </section>
  <!--================ End New Product Area =================-->


  <!--================ Inspired Product Area =================-->
  <section class="inspired_product_area section_gap_bottom_custom" style="padding-top:50px;">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-lg-12">
          <div class="main_title">
            <h2><span><localize>Newest Products</localize></span></h2>
            <h3>Our Newest Products on This Season</h3>
          </div>
        </div>
      </div>

      <div class="row">
        @foreach(var item in Model.LatestProducts)
        {
            var url = $"/{culture}/{_loc["productUrl"]}/{item.ProductId}";
           <div class="col-lg-3 col-md-6">
              <div class="single-product">
                <div class="product-img">
                  <a href="@url"><img class="img-fluid w-100" src="@(Configuration["BaseAddress"]+item.ShowDefaultImage)" alt="@item.Name" style="width:255px;height:360px;" /></a>
                  <div class="p_icon">
                    <a href="@url">
                      <i class="ti-eye"></i>
                    </a>
                    <a href="#" class="btn-add-cart" data-id="@item.ProductId">
                      <i class="ti-shopping-cart"></i>
                    </a>
                  </div>
                </div>
                <div class="product-btm">
                  <a href="@url" class="d-block">
                    <h4>@item.Name</h4>
                  </a>
                  <div class="mt-3">
                    <span class="mr-4">@item.Price.ToString("C", CultureInfo.CurrentCulture)</span>
                    <del>@item.OriginalPrice.ToString("C", CultureInfo.CurrentCulture)</del>
                  </div>
                </div>
              </div>
            </div>     
        }      
        </div>
    </div>
  </section>
  <!--================ End Inspired Product Area =================-->

